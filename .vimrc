execute pathogen#infect()
syntax on
filetype plugin indent on

autocmd FileType html setlocal shiftwidth=2 tabstop=2
autocmd FileType xsl setlocal shiftwidth=2 tabstop=2

set relativenumber

set clipboard=unnamed
set nocompatible
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set scrolloff=3
set showmode
set showcmd
